{
  "name": "@storybook-visual-regression/cli",
  "version": "1.6.1",
  "description": "A comprehensive visual regression testing tool for any Storybook project",
  "main": "dist/cli/index.js",
  "type": "module",
  "bin": {
    "storybook-visual-regression": "dist/cli/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json --watch",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "prepublishOnly": "npm run build",
    "prepare": "npm run build",
    "postinstall": "if [ \"$DOCKER_BUILD\" != \"1\" ]; then playwright install chromium; fi",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "storybook",
    "visual-regression",
    "testing",
    "playwright",
    "screenshot",
    "ui-testing",
    "component-testing"
  ],
  "author": "Michael Beswick <mjbeswick@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mjbeswick/storybook-visual-regression.git"
  },
  "bugs": {
    "url": "https://github.com/mjbeswick/storybook-visual-regression/issues"
  },
  "homepage": "https://github.com/mjbeswick/storybook-visual-regression#readme",
  "dependencies": {
    "@commander-js/extra-typings": "^12.1.0",
    "@playwright/test": ">=1.40.0",
    "chalk": "^5.6.2",
    "cli-progress": "^3.12.0",
    "commander": "^12.1.0",
    "execa": "^9.0.0",
    "log-update": "^7.0.1",
    "odiff-bin": "^4.1.1",
    "ora": "^8.2.0",
    "picomatch": "^4.0.3",
    "playwright": "^1.40.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/cli-progress": "^3.11.6",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitest/coverage-v8": "^3.0.5",
    "@vitest/ui": "^3.0.5",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.45.0",
    "vitest": "^3.0.5"
  },
  "peerDependencies": {
    "@playwright/test": ">=1.40.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
