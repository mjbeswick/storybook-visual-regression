{
  "name": "storybook-visual-regression",
  "version": "1.2.2",
  "description": "A comprehensive visual regression testing tool for any Storybook project",
  "main": "dist/cli/index.js",
  "type": "module",
  "bin": {
    "storybook-visual-regression": "dist/cli/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && cp -r src/config dist/ && cp svr.config.ts dist/",
    "build:watch": "tsc --watch && cp -r src/config dist/",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "prepublishOnly": "npm run build",
    "prepare": "npm run build",
    "postinstall": "playwright install chromium",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "storybook",
    "visual-regression",
    "testing",
    "playwright",
    "screenshot",
    "ui-testing",
    "component-testing"
  ],
  "author": "Michael Beswick <mjbeswick@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mjbeswick/storybook-visual-regression.git"
  },
  "bugs": {
    "url": "https://github.com/mjbeswick/storybook-visual-regression/issues"
  },
  "homepage": "https://github.com/mjbeswick/storybook-visual-regression#readme",
  "dependencies": {
    "@playwright/test": ">=1.40.0",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "ora": "^8.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.45.0",
    "vitest": "^3.0.5"
  },
  "peerDependencies": {
    "@playwright/test": ">=1.40.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
