{
  "name": "storybook-visual-regression",
  "version": "1.0.2",
  "description": "A comprehensive visual regression testing tool for any Storybook project",
  "private": true,
  "type": "module",
  "workspaces": [
    "cli",
    "addon"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "format": "npm run format --workspaces",
    "format:check": "npm run format:check --workspaces",
    "clean": "npm run clean --workspaces",
    "publish:cli": "npm run build --workspace cli && npm publish --workspace cli",
    "publish:addon": "npm run build --workspace addon && npm publish --workspace addon",
    "unpublish:cli": "node ./scripts/unpublish-old-versions.mjs @storybook-visual-regression/cli",
    "unpublish:addon": "node ./scripts/unpublish-old-versions.mjs @storybook-visual-regression/addon",
    "docker:build": "docker build -t storybook-visual-regression .",
    "docker:build:nocache": "docker build --no-cache -t storybook-visual-regression ."
  },
  "keywords": [
    "storybook",
    "visual-regression",
    "testing",
    "playwright",
    "screenshot",
    "ui-testing",
    "component-testing",
    "monorepo"
  ],
  "author": "Michael Beswick <mjbeswick@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mjbeswick/storybook-visual-regression.git"
  },
  "bugs": {
    "url": "https://github.com/mjbeswick/storybook-visual-regression/issues"
  },
  "homepage": "https://github.com/mjbeswick/storybook-visual-regression#readme",
  "engines": {
    "node": ">=20.0.0"
  }
}
