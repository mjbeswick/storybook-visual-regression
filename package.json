{
  "name": "storybook-visual-regression",
  "version": "1.0.2",
  "description": "A comprehensive visual regression testing tool for any Storybook project",
  "private": true,
  "type": "module",
  "workspaces": [
    "cli",
    "addon"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "format": "npm run format --workspaces",
    "format:check": "npm run format:check --workspaces",
    "clean": "npm run clean --workspaces",
    "publish:cli": "cd cli && npm publish",
    "publish:addon": "cd addon && npm publish"
  },
  "keywords": [
    "storybook",
    "visual-regression",
    "testing",
    "playwright",
    "screenshot",
    "ui-testing",
    "component-testing",
    "monorepo"
  ],
  "author": "Michael Beswick <mjbeswick@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mjbeswick/storybook-visual-regression.git"
  },
  "bugs": {
    "url": "https://github.com/mjbeswick/storybook-visual-regression/issues"
  },
  "homepage": "https://github.com/mjbeswick/storybook-visual-regression#readme",
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitest/coverage-v8": "^3.0.5",
    "@vitest/ui": "^3.0.5",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.45.0",
    "vitest": "^3.0.5"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
