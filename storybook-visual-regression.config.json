{
  "visualRegression": {
    "url": "http://localhost:9009",
    "outputDir": "visual-regression",
    "snapshotPath": "visual-regression/snapshots",
    "resultsPath": "visual-regression/results",
    "browser": "chromium",
    "retries": 2,
    "threshold": 0.2,
    "maxDiffPixels": 0,
    "fullPage": false,
    "viewportSizes": [
      {
        "name": "mobile",
        "width": 375,
        "height": 667
      },
      {
        "name": "tablet",
        "width": 768,
        "height": 1024
      },
      {
        "name": "desktop",
        "width": 1024,
        "height": 768
      }
    ],
    "defaultViewport": "desktop",
    "discoverViewports": true,
    "mutationWait": 200,
    "mutationTimeout": 1000,
    "snapshotRetries": 1,
    "snapshotDelay": 0,
    "disableAnimations": true,
    "fixDate": true
  }
}
